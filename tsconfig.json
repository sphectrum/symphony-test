{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
  },
  "include": [
    "./src/**/*.ts",
    "./api/**/*.ts",
    "./tests/**/*.ts",
    "./pages/**/*.ts",
    "./playwright.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}